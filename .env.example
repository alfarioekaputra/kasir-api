# Server Configuration
PORT=8080

# Database Configuration
# DB_TYPE can be: postgres or mysql
DB_TYPE=postgres

# PostgreSQL Connection String Example
DB_CONN=postgres://username:password@localhost:5432/dbname?sslmode=disable

# MySQL Connection String Example (uncomment to use)
# DB_CONN=username:password@tcp(localhost:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local

# Storage Configuration (R2/S3)
BUCKET_NAME=your-bucket-name
ACCOUNT_ID=your-account-id
ACCESS_KEY_ID=your-access-key-id
SECRET_ACCESS_KEY=your-secret-access-key
PUBLIC_ENDPOINT=https://your-public-endpoint.com
